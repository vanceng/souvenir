</div>

<script>
  $("#loginSubmit").on('click', function() {

    var url = "http://api.localhost.com:3000/memories/"; // the script where you handle the form input.
    var memory = {
      title: $("#signinModal #title").val(),
      description: $("#signinModal #description").val()
    }; 

    $.ajax({     
      type: "POST",
      url: url,
      data: JSON.stringify(memory), // serializes the form's elements.
      contentType: "application/json",
      success: function() {
        $("#signinModal #title").val("");
        $("#signinModal #description").val("");
        $("#signinModal").foundation('reveal', 'close');
 // show response from the php script.
      },
      error: function(jqXHR, textStatus, errorThrown) {
        console.log(textStatus, errorThrown);
      }
    });
  });

  // $("loginSubmit").on('click', function() {
