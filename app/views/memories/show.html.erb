<a href="#" data-reveal-id="signinModal">Click Me For A Modal</a>

<div id="signinModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <%= form_tag sessions_path do %>
    <div>
      <%= label_tag :title %><br/>
      <%= text_field_tag :title %>
    </div>
    <div>
      <%= label_tag :description %><br/>
      <%= password_field_tag :description %>
    </div>
    <div><button id="loginSubmit" type="button">Login</button></div>
  <% end %>
