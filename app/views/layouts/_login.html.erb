<!-- Triggers the modals -->

<!-- Reveal Modals begin -->
<div id="loginModal" class="reveal-modal small" data-reveal aria-labelledby="firstModalTitle" aria-hidden="true" role="dialog">
  <h2 class="modaldetailsheader">LOGIN</h2>

      <%= form_tag sessions_path do %>
        <div>
          <%= label_tag "email", "EMAIL:", :class => "modal-form-control" %>
          <%= text_field_tag "email" %>
        </div>
        <div>
          <%= label_tag :password, "PASSWORD:", :class => "modal-form-control" %>
          <%= password_field_tag :password %>
        </div>
        <div><%= submit_tag "LOG IN", class: "secondary button submit_login" %></div>
      <% end %>

      <br/>
  <p><a href="#" data-reveal-id="secondModal" class="button new_user">NOT A USER? SIGN UP HERE</a></p>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>

<div id="secondModal" class="reveal-modal small" data-reveal aria-labelledby="secondModalTitle" aria-hidden="true" role="dialog">
  <h2 class="modaldetailsheader">SIGN UP</h2>
  <p class="modaldetailsheader">USER DETAILS:</p>

  <a class="close-reveal-modal" aria-label="Close">&#215;</a>

  <%= form_for :user, url: users_path, action: "post" do |f| %>

    <div class="modal-form-control">
      <%= f.label :first_name, "FIRST NAME" %>
      <%= f.text_field :first_name %>
    </div>

    <div class="modal-form-control">
      <%= f.label :last_name, "LAST NAME" %>
      <%= f.text_field :last_name %>
    </div>

    <div class="modal-form-control">
      <%= f.label :email, "EMAIL:"%>
      <%= f.text_field :email%>
    </div>

    <div class="modal-form-control">
      <%= f.label :password, "PASSWORD:"%>
      <%= f.password_field :password %>
    </div>

    <div class="modal-form-control">
      <%= f.label :website, "WEBSITE:" %>
      <%= f.text_field :website %>
    </div>

    <div class="modal-form-control">
      <%= f.label :biography, "BIOGRAPHY:" %>
      <%= f.text_field :biography %>
    </div>
<!-- 
    <div class="modal-form-control">
      <%= f.label :profile_photo, "UPLOAD PROFILE PHOTO:" %>
      <%= f.file_field :profile_photo %>
    </div>
 -->
    <div>
    <%= f.submit "SIGN UP" %>
    </div>

  <% end %>
</div>

<!-- Reveal Modals end -->











